<h2 class="font-medium text-5xl text-center adm-text-primary mb-12">
  Ressources et Actus
</h2>

<div class="flex flex-col lg:flex-row flex-wrap gap-4 justify-center px-32">
  <% @posts.each do |post| %>
    <div class="card w-96 adm-bg-tertiary shadow-xl card-bordered max-w-fit">
      <div class="card-body">
        <h2 class="card-title adm-text-quaternary"><%= post.title %></h2>
        <p class="text-black"><%= post.content %></p>
        <div class="card-actions justify-end">
          <button class="btn btn-xs">Lire</button>
        </div>
      </div>
    </div>
  <% end %>
</div>