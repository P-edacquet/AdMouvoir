<div class="px-4 lg:px-12 pb-10 lg:pb-24">
  <h1 class="text-6xl text-center py-16">
    Ressources et Actualités
  </h1>
  <% if @category %>
    <h2 class="!text-3xl">
      Thème : <%= @category %>
      <%= link_to actualites_path do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
      <% end %>
    </h2>
  <% end %>
  <div class="flex flex-wrap gap-4 justify-center px-4">
    <%= render partial: "post_card", collection: @posts, as: :post %>
  </div>
</div>