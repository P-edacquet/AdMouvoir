  </h1>
  <div class="flex flex-row flex-wrap gap-4 justify-center px-4">
    <% @posts.each do |post| %>
      <div class="card card-compact md:card-normal w-96 adm-bg-tertiary shadow-xl card-bordered grow">
        <div class="card-body">
          <h2 class="card-title adm-text-quaternary break-all text-2xl"><%= post.title %></h2>
